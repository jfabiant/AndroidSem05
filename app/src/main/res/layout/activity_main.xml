<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0336FF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:onClick="redireccion1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img2"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNombres1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/fuente1"
                        android:text="Florentina Martinez Sanchez"/>
                    <TextView
                        android:id="@+id/txtOcupacion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:fontFamily="@font/fuente1"
                        android:text="Marketing Directora"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:onClick="redireccion2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img1"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNombres2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/fuente1"
                        android:text="Valeria Sanchez Arias"/>
                    <TextView
                        android:id="@+id/txtOcupacion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:fontFamily="@font/fuente1"
                        android:text="Productora"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:onClick="redireccion3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img3"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNombres3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/fuente1"
                        android:text="Rosario Mariana Vertigo"/>
                    <TextView
                        android:id="@+id/txtOcupacion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:fontFamily="@font/fuente1"
                        android:text="Directora"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:onClick="redireccion4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafafa"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <FrameLayout
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img4"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNombres4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:fontFamily="@font/fuente1"
                        android:text="Maritza Julieta Rosario"/>
                    <TextView
                        android:id="@+id/txtOcupacion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
